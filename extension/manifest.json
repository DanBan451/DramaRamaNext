{
  "manifest_version": 3,
  "name": "DramaRama - Mental Gym for Algorithms",
  "version": "1.0.0",
  "description": "Apply the 5 Elements of Effective Thinking to algorithm problems",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.hackerrank.com/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://www.hackerrank.com/*"
      ],
      "js": ["token_ingest.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://www.hackerrank.com/challenges/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

